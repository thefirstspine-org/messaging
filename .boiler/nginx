server {
    server_name messaging.thefirstspine.fr;

    location /socket {
        proxy_pass http://127.0.0.1:2205;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    location / {
        proxy_pass http://127.0.0.1:2205;
    }



    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/messaging.thefirstspine.fr/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/messaging.thefirstspine.fr/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = messaging.thefirstspine.fr) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    server_name messaging.thefirstspine.fr;
    listen 80;
    return 404; # managed by Certbot


}
