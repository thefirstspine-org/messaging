server {
    listen 80;
    server_name beta.messaging.thefirstspine.fr;

    location /socket {
        proxy_pass http://127.0.0.1:2205;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    location / {
        proxy_pass http://127.0.0.1:2205;
    }
}
